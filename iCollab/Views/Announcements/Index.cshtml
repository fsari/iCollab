@{
    ViewBag.Title = "Duyurular";
}
@using Model 
 
<aside class="right-side">
    <section class="content-header">
        <h1 class="pull-left">Duyurular</h1> 
        <div class="clearfix"></div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> 
                            @Html.ActionLink("Yeni Duyuru", "Create", "Announcements", null, new { @class = "btn btn-primary" })
                        </h3>
                        <div class="pull-right" style="margin: 4px;">
                            <form id="searchform" name="searchform" action="/Announcements/Search" method="POST" class="sidebar-form">
                                <div class="input-group">
                                    <input type="text" name="query" class="form-control" placeholder="Arama." />
                                    <span class="input-group-btn">
                                        <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    
                     
                    <div class="box-body">
                        @(Html.Kendo().Grid<Announcement>()
                            .Name("grid")
                            .Columns(columns =>
                            {
                                columns.Bound(p => p.Title).Groupable(false).Filterable(true).ClientTemplate("<a href='/Announcements/View/#= Id#'>#=Title#</a>").Title("Duyuru");
                                columns.Bound(c => c.PublishDate).Format("{0:dd/MM/yyyy}").Width(190);
                                columns.Bound(c => c.CreatedBy).Width(190);
                            })
                            .HtmlAttributes(new { style = "height: 680px;" })
                            .Scrollable()
                            .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                            .Sortable()
                            .Resizable(resize => resize.Columns(true))
                            .Pageable(pageable => pageable.Refresh(true).PageSizes(false))
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Sort(sort => sort.Add("PublishDate").Descending())
                                .PageSize(60)
                                .Model(model => model.Id(p => p.Id))
                                .Read(read => read.Action("Read", "Announcements"))
                            )
                        )
                        
                    </div>
  
                </div>
            </div>
        </div>
    </section>
</aside>
