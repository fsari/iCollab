@model iCollab.ViewModels.ProfileViewModel

<div class="box">
    <div class="box-body">
        @using (Html.BeginForm("UploadPicture", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Upload Image:</label>
            <input type="file" name="file" id="file" style="width: 100%;" />
            <input type="submit" value="Upload" class="btn btn-default" />
        }
    </div>
</div>
