@using iCollab.ViewModels 
@model Model.Document

@{
    ViewBag.Title = @Model.Title;
} 
<aside class="right-side">
    <section class="content-header">
        <h1 class="pull-left">@Model.Title</h1>
        <div class="pull-right">
            @Html.ActionLink("Duzenle", "Edit", "Documents", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Sil", "Delete", "Documents", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Silmek istediğinizden emin misiniz ?');" })
            @Html.ActionLink("Dökümanlar", "Index", "Documents", new { id = Model.Id }, new { @class = "btn btn-info btn-sm" })
        </div>
        <div class="clearfix"></div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div>
                            @Html.Raw(HttpUtility.HtmlDecode(Model.Description))

                            <div class="pull-left">
                                @Html.ActionLink("İçerik ekle", "AddContentPage", "Documents", new { documentId = Model.Id }, new { @class = "btn btn-primary" })
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="box box-primary">
                    <div class="box-body">
                        <strong>Oluşturulma tarihi : </strong>@Html.DisplayFor(model => model.DateCreated) <br />
                        <strong>Oluşturan kullanıcı :</strong>  <label class="label label-primary">@Model.CreatedBy</label> <br />
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="box box-primary">
                    <div class="box-body">
                        @{Html.RenderPartial("_Attachment", new AttachmentViewModel
                          {
                              Attachments = Model.Attachments,
                              UploadPath = "/Documents/Upload/?id=" + Model.Id,
                              RemovePath = "/Documents/RemoveAttachment/?documentId=" + Model.Id
                          });}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.ContentPages != null)
            {
                foreach (var item in Model.ContentPages)
                {
                    <div class="col-xs-6">
                        <div class="box box-info">
                            <div class="box-body">
                                <strong>@item.Title</strong> <br />
                                @Html.Raw(HttpUtility.HtmlDecode(item.Description))
                                @Html.ActionLink("Düzenle", "EditContentPage","Documents", new{documentId = Model.Id, contentPageId = item.Id}, new {@class="btn btn-sm btn-warning"})
                                @Html.ActionLink("Sil", "DeleteContentPage", "Documents", new { documentId = Model.Id, contentPageId = item.Id }, new { @class = "btn btn-sm btn-warning" , onclick = "return confirm('Silmek istediğinizden emin misiniz ?');"  })
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
</aside> 