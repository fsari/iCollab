@model IEnumerable<Model.Meeting>

<div class="box box-primary">
    <div class="box-header">
        <i class="fa  fa-exchange"></i>
        <div class="box-title">Toplantılarım</div>
        <div class="pull-right box-tools">
            <div class="btn-group">
                <button class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>@Html.ActionLink("Yeni toplantı", "Create", "Meetings")</li>
                    <li>@Html.ActionLink("Toplantılar", "Index", "Meetings")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="box-body table-responsive no-padding"> 
        @if (Model.Any() == false)
        {
            <div class="callout callout-info">
                Size ait bir toplantı yok. Yeni bir toplantı olurmak için :
                @Html.ActionLink("Yeni toplantı", "Create", "Meetings", null, new { @class = "btn btn-sm btn-primary" })
            </div>
        }
        else
        {
            {Html.RenderPartial("_MeetingTable", Model);}
        }
    </div>
</div>
