@model IEnumerable<Model.Document>


<div class="box box-primary">
    <div class="box-header">
        <i class="fa  fa-book"></i>
        <div class="box-title">Dokümanlarım</div>
        <div class="pull-right box-tools">
            <div class="btn-group">
                <button class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>@Html.ActionLink("Yeni döküman", "Create", "Documents")</li>
                    <li>@Html.ActionLink("Dökümanlar", "Index", "Documents")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="box-body table-responsive no-padding">
        @if (Model.Any() == false)
        {
            <div class="callout callout-info">
                Size ait bir doküman yok. Yeni bir doküman oluşturmak için :
                @Html.ActionLink("Yeni doküman", "Create", "Documents", null, new { @class = "btn btn-sm btn-primary" })
            </div>
        }
        else
        {
            { Html.RenderPartial("_DocumentTable", Model); }
        }
    </div>
</div>
