@model IEnumerable<Model.Task>

<div class="box box-success">
    <div class="box-header">
        <div class="pull-right box-tools">
            <div class="btn-group">
                <button class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>@Html.ActionLink("Yeni Görev", "CreateTask", "Tasks")</li> 
                    <li>@Html.ActionLink("Görevlerim", "Index", "Tasks")</li> 
                    <li>@Html.ActionLink("Oluşturduğum Görevler", "ByMe", "Tasks")</li>
                </ul>
            </div>
        </div>

        <i class="fa fa-ticket"></i>
        <div class="box-title">Görevlerim</div>
    </div>

    <div class="box-body table-responsive no-padding">
        @if (Model.Any() == false)
        {
            <div class="callout callout-info">
                Size ait bir görev yok.
            </div>
        }
        else
        {
            { Html.RenderPartial("_TaskTable", Model); }
        }
    </div>

</div>



