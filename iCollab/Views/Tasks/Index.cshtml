@{
    ViewBag.Title = "Görevler";
}

@using Model  

<aside class="right-side">

    <section class="content-header">
        <h1 class="pull-left">Görevler</h1> 
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @{Html.RenderPartial("_TaskMenu");}
                        
                        <div class="pull-right" style="margin: 4px;">
                            <form id="searchform" name="searchform" action="/Tasks/Search" method="POST" class="sidebar-form">
                                <div class="input-group">
                                    <input type="text" name="query" class="form-control" placeholder="Arama." />
                                    <span class="input-group-btn">
                                        <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="box-body table-responsive no-padding">
                        @(Html.Kendo().Grid<Task>()
                            .Name("grid")
                            .Columns(columns =>
                            {
                                columns.Bound(p => p.Title).Groupable(false).Filterable(true).ClientTemplate("<a href='/Tasks/View/#= Id#'>#=Title#</a>").Title("Proje");
                                columns.Bound(c => c.StartDatetime).Width(220).Title("Başlangıç");
                                columns.Bound(c => c.EndDatetime).Width(220).Title("Bitiş"); 
                                columns.Bound(c => c.Priority).Width(220).Title("Öncelik");
                                columns.Bound(c => c.TaskStatus).Width(220).Title("Öncelik"); 
                            })
                            .HtmlAttributes(new { style = "height: 680px;" })
                            .Scrollable()
                            .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                            .Sortable()
                            .Resizable(resize => resize.Columns(true))
                            .Pageable(pageable => pageable.Refresh(true).PageSizes(false))
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Sort(sort => sort.Add("Id").Descending())
                                .PageSize(60)
                                .Model(model => model.Id(p => p.Id))
                                .Read(read => read.Action("Read", "Tasks"))
                            )
                        )
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>


