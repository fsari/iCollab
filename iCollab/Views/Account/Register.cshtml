 ﻿@model iCollab.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Kayıt";
}
<aside class="right-side">
    <section class="content-header">
        <h1>
            Yeni Kullanıcı Kaydı
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <br/>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewData.ModelState.IsValid == false)
                        {
                            <div class="callout callout-danger">
                                @Html.ValidationSummary()
                            </div>
                        }
                        <div class="form-group">
                            @Html.LabelFor(m => m.Fullname, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.Fullname)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Kaydet" />
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</aside> 