<body class="skin-black fixed">

    <input type="hidden" id="success" value="@TempData["success"]" />
    <input type="hidden" id="info" value="@TempData["info"]" />
    <input type="hidden" id="warning" value="@TempData["warning"]" />
    <input type="hidden" id="error" value="@TempData["error"]" />

    <div class="wrapper">

        @{ Html.RenderAction("RenderHeader", "Dashboard"); }

        @{Html.RenderAction("Sidebar", "Dashboard");}

        @RenderBody()

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Versiyon</b> 1.0
            </div>
            <strong>
                Copyright &copy; @DateTime.Now.Year.
            </strong>
        </footer>
    </div>


    <script type="text/javascript">

        $(document).ready(function () {
            if ($('#success').val()) {
                displayMessage($('#success').val(), 'success');
            }
            if ($('#info').val()) {
                displayMessage($('#info').val(), 'info');
            }
            if ($('#warning').val()) {
                displayMessage($('#warning').val(), 'warning');
            }
            if ($('#error').val()) {
                displayMessage($('#error').val(), 'error');
            }
        });

        var displayMessage = function (message, msgType) {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "positionClass": "toast-top-center",
                "onClick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "8000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            toastr[msgType](message);
        };
