@model IEnumerable<Model.Document>


@if (Model != null)
{
    if (Model.Any() == false)
    {
        <div class="callout callout-info">
            Size ait bir doküman yok. Yeni bir doküman oluşturmak için :
            @Html.ActionLink("Yeni doküman", "Create", "Documents", null, new { @class = "btn btn-sm btn-primary" })
        </div>
    }
    else
    {
        <table class="table table-striped table-responsive table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th style="width: 90px;">Tarih</th> 
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(item.Title, "View", "Documents", new { id = item.Id }, null)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateCreated)</td> 
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}

